{
	"compilerOptions": {
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": [
			"es2022",
			"DOM"
		],
		"module": "esnext",
		"moduleResolution": "Bundler",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022",
		"useDefineForClassFields": true,
		"useUnknownInCatchVariables": false,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@api/*": [
				"src/core/api/*"
			],
			"@core/*": [
				"src/core/*"
			],
			"@generated/*": [
				"src/generated/*"
			],
			"@hosts/*": [
				"src/hosts/*"
			],
			"@integrations/*": [
				"src/integrations/*"
			],
			"@packages/*": [
				"src/packages/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@shared/*": [
				"src/shared/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"cli/src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/**/__tests__/**",
		"src/**/*.test.ts",
		"src/generated/hosts/vscode/**"
	]
}
